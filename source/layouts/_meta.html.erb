  <meta name="description"           content="<%= yield_content(:meta_description) || data.meta.description %>" />

  <!-- Geocoding -->
  <meta name="geo.placename"         content="<%= data.meta.geo_placename %>" />
  <meta name="geo.position"          content="<%= data.meta.geo_position %>" />
  <meta name="geo.region"            content="<%= data.meta.geo_region %>" />

  <!-- Microdata -->
  <meta itemprop="name"              content="<%= data.meta.name %>" />
  <meta itemprop="description"       content="<%= yield_content(:meta_description) || data.meta.description %>" />
  <meta itemprop="image"             content="<%= image_path data.meta.image %>" />

  <!-- Facebook Open Graph data -->
  <meta property="og:site_name"      content="<%= data.meta.fb_site_name %>" />
  <meta property="og:title"          content="<%= data.meta.fb_title %>" />
  <meta property="og:description"    content="<%= data.meta.fb_description %>" />
  <meta property="og:image"          content="<%= image_path data.meta.fb_image %>" />
  <meta property="og:type"           content="<%= data.meta.fb_type %>" />
  <meta property="og:url"            content="<%= data.meta.fb_url %>" />

  <!-- Google+ -->
  <meta itemprop="name"              content="<%= data.meta.google_name %>" />
  <meta itemprop="description"       content="<%= data.meta.google_description %>" />
  <meta itemprop="image"             content="<%= image_path data.meta.google_image %>" />

  <!-- Twitter Card data -->
  <meta name="twitter:card"          content="<%= data.meta.twitter_card_type %>" />
  <meta name="twitter:site"          content="<%= data.meta.twitter_site %>" />
  <meta name="twitter:title"         content="<%= data.meta.twitter_title %>" />
  <meta name="twitter:description"   content="<%= data.meta.twitter_description %>" />
  <meta name="twitter:image:src"     content="<%= image_path data.meta.twitter_image %>" />
