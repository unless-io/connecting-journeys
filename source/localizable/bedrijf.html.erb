<div class="main-wrapper">
  <div class="banner-nav" style="background-image:url('<%= dato.jezelf_page.banner_image.url %>');">
    <div class="banner-content text-center">
      <h2 class="h1-style">
        <%= dato.bedrijven_page.title %>
      </h2>
      <ul class="list-inline list-unstyled">
        <li>
          <%= link_to "Voor jezelf", "/jezelf.html", class: "banner-nav-item" %>
        </li>
        <span>
          •
        </span>
        <li>
          <%= link_to "Voor je school", "/school.html", class: "banner-nav-item" %>
        </li>
        <span>
          •
        </span>
        <li>
          <%= link_to "Voor je bedrijf", "/bedrijf.html", class: "banner-nav-item #{'active' if current_page.path.include?("bedrijf")}" %>
        </li>
        <span>
          •
        </span>
        <li>
          <%= link_to "Voor non-profitorganisaties", "/non-profits.html", class: "banner-nav-item" %>
        </li>
      </ul>
    </div>
  </div>
</div>

<div class="wrapper-white">
  <div class="container">
    <div class="row">
      <div class="col-xs-12">
        <div class="inspiration-text text-center">
          <%= Kramdown::Document.new(dato.bedrijven_page.main_text).to_html %>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="wrapper-light-gray">
  <div class="container">
    <div class="row">
      <div class="col-xs-12 col-lg-12">
        <div class="simple-card-header">
          <h2>
            <%= dato.bedrijven_page.section_2_title %>
          </h2>
          <%= Kramdown::Document.new(dato.bedrijven_page.section_2_body_text).to_html %>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-xs-12 col-lg-4">
        <div class="simple-card">
          <h3>
            <%= dato.bedrijven_page.section_2_block_1_title %>
          </h3>
          <%= Kramdown::Document.new(dato.bedrijven_page.section_2_block_1_description).to_html %>
        </div>
      </div>
      <div class="col-xs-12 col-lg-4">
        <div class="simple-card">
          <h3>
            <%= dato.bedrijven_page.section_2_block_2_title %>
          </h3>
          <%= Kramdown::Document.new(dato.bedrijven_page.section_2_block_2_description).to_html %>
        </div>
      </div>
      <div class="col-xs-12 col-lg-4">
        <div class="simple-card">
          <h3 class="margin-bottom-header">
            <%= dato.bedrijven_page.section_2_block_3_title %>
          </h3>
          <%= Kramdown::Document.new(dato.bedrijven_page.section_2_block_3_description).to_html %>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-xs-12">
        <div class="text-center">
          <%= link_to dato.bedrijven_page.section_2_button_text, "#", class: "button-outline orange"  %>
        </div>
      </div>
    </div>
  </div>
</div>

<% if dato.bedrijven_page.section_3_title != "" %>

<div class="wrapper-white">
  <div class="container">
    <div class="row">
      <div class="col-xs-12">
        <div class="simple-card-header">
          <h2>
            <%= dato.bedrijven_page.section_3_title %>
          </h2>
          <%= Kramdown::Document.new(dato.bedrijven_page.section_3_body_text).to_html %>
        </div>
      </div>
    </div>
  </div>
</div>
<% end %>
<div class="wrapper-background-image" style="background-image:url('<%= dato.bedrijven_page.section_4_banner_image.url %>');">
  <div class="container">
    <div class="row">
      <div class="col-xs-12 col-lg-10 col-lg-offset-1">
        <div class="cta-box">
          <h2>
            <%= dato.bedrijven_page.section_4_banner_text %>
          </h2>
        </div>
      </div>
    </div>
  </div>
</div>


<div class="wrapper-white">
  <div class="container">
    <div class="row">
      <div class="col-xs-12">
        <div class="simple-card-header">
          <h2>
            <%= dato.bedrijven_page.section_4_title %>
          </h2>
          <%= Kramdown::Document.new(dato.bedrijven_page.section_4_body_text).to_html %>
          <div class="avatar" style="background-image:url('<%= dato.bedrijven_page.section_4_avatar.url %>');"></div>
          <div class="text-center">
            <%= link_to dato.bedrijven_page.section_4_button_text, "#", class: "button-outline orange"  %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>


<div class="wrapper-light-gray">
  <div class="container">
    <div class="row">
      <div class="col-xs-12 col-lg-12">
        <div class="simple-card-header">
          <h2>
            Ga mee op een van deze reizen
          </h2>
        </div>
      </div>
      <% dato.trips.first(3).each do |trip| %>
      <div class="col-xs-12 col-lg-4">
        <div class="simple-card">
          <div class="simple-card-image" style="background-image:url('<%= trip.photos.first.url %>');"></div>
          <h3>
            <%= trip.title %>
          </h3>
          <p>
            <%= Kramdown::Document.new(truncate(trip.description, length: 100)).to_html %>
          </p>
          <%= link_to "Vertel me meer!", "#", class: "button-simple"  %>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</div>


